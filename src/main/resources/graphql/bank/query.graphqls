type Query {
    accounts: [BankAccountType]
}

type Mutation {
    addAccount(account: BankAccountInput): BankAccountType
}

type BankAccountType {
    id: ID
    client: ClientType
    currency: Currency
    balance: Float
    status: String
}

input BankAccountInput {
    client: ClientInput
    currency: Currency
    balance: Float
    status: String
}

input ClientInput {
    firstName: String
    middleName: String
    lastName: String
}

type ClientType {
    id: ID
    firstName: String
    middleName: String
    lastName: String
}

# Supported currencies
enum Currency {
    #Euro
    EUR,
    # Canadian Dollar
    CAD,
    # United States Dollar
    USD
}